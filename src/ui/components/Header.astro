---
import { l } from 'astro-i18n';

import LocaleSwitcher from './LocaleSwitcher.astro';
import ThemeSwitcher from './ThemeSwitcher.astro';

import Logo from '@/ui/foundations/Logo.astro';
---

<header
  class='fixed left-0 top-0 z-50 flex w-full items-center justify-between bg-gradient-to-b from-background to-transparent p-2 backdrop-blur-[1px]'
>
  <a href={l('/')} class='group flex items-center space-x-4'>
    <Logo cn={'h-8 w-8'} />
  </a>
  <div class='flex items-center space-x-1'>
    <LocaleSwitcher />
    <ThemeSwitcher />
  </div>
</header>
