---
import { getHeadings } from './getHeadings';
import RecursiveList from './RecursiveList.astro';

interface Props {
  post: string;
}

const { post } = Astro.props;
const headings = getHeadings(post);
---

<aside
  class:list={'select-none sticky top-[60px] w-[min(25vw,25%)] h-full hidden lg:block overflow-hidden text-sm'}
>
  <RecursiveList headings={headings} />
</aside>
